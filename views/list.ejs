<%- include('header') -%>

<div class="container mt-3">

	<div class="row justify-content-center">
		<div class="mt-5 col-sm-12 col-md-10 col-lg-6">
			<div class="mt-5 card bg-dark text-white">
				<div class="card-header">
					<span class="font-weight-bold">To-Do List (<%= day %>)</span>
				</div>
				<div class="card-body">
					<h6 class="card-title">What i need to do today?</h6>

					<table class="table table-striped table-dark">
						<tbody>
							<% if (activities.length > 0) { %> 
								<% for (let i = 0; i < activities.length; i++) { %>
									<tr>
										<td>
											<div class="row">
												<div class="col-xs-5 col-md-8">
													<%= i + 1 %>. <%= activities[i].name %>
		 											
		 											<% if (activities[i].finished) { %>
														<i class="fa fa-check"></i>
													<% } %>																
												</div>

												<div class="col-xs-3 col-md-1 ml-md-4">
													<form action="/finishActivity" method="post" class="mt-2 d-inline">
														<input type="hidden" name="itemIndex" value="<%= i %>">

														<span class="badge badge-success check-item">Check</span>
													</form>
												</div>

												<div class="col-xs-3 col-md-1 ml-md-2">
													<form action="/deleteActivity" method="post" class="mt-2 d-inline">
														<input type="hidden" name="itemIndex" value="<%= i %>">
														<span class="badge badge-danger remove-item">Remove</span>
													</form> 														
												</div>
											</div>
										</td>



									</tr>
								<% } %>
							<% } else { %>
								<span>There is nothing you can do.</span>
							<% } %>
						</tbody>
					</table>
		
		
					<div class="row">
						<div class="col-12">
							<form action="/" method="post" class="mt-3">
								<div class="row">
									<div class="col-10">
										<input class="form-control" type="text" name="newItem" placeholder="New activity..." autocomplete="off">
									</div>
									<div class="col-2">
										<button class="btn btn-outline-success btn-add-activity" type="submit">Add</button>
									</div>
								</div>
							</form>						
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
	
</div>

<%- include('footer') -%>